<div id="user-tools">
	<h3 class="sr-only">Лични инструменти</h3>
	<ul class="user-tools-menu">
	{% if _user.isAuthenticated() %}
		<li class="level-0 dropdown">
			<a class="dropdown-toggle user-tools-toggle" id="user-tools-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false" aria-label="Меню с лични инструменти">
				<span class="fa fa-user"></span> <span class="user-name">{{ _user.username }}</span>
				<span class="fa fa-caret-down"></span>
			</a>
			<ul class="dropdown-menu dropdown-menu-right" aria-labelledby="user-tools-toggle">
				<li class="user-profile"><a href="{{ path('user_show', {'username': _user.username}) }}" title="Лична страница — {{ _user.username }}"><span class="fa fa-user"></span> Профил</a></li>
				<li class="user-settings"><a href="{{ path('user_edit', {'username': _user.username}) }}" title="Потребителски настройки"><span class="fa fa-gear"></span> Настройки</a></li>
				<li role="separator" class="divider"></li>
				{% if _user.inGroup('admin') %}
					<li class="user-dashboard"><a href="{{ path('admin') }}" title="Администрация"><span class="fa fa-gears"></span> Админ</a></li>
				{% endif %}
				<li class="user-signout" title="Изход от библиотеката"><a href="{{ path('logout') }}"><span class="fa fa-sign-out"></span> Изход</a></li>
			</ul>
		</li>
	{% else %}
		<li class="level-0 user-signin"><a href="{{ path('login') }}"><span class="fa fa-sign-in"></span> Вход</a></li>
	{% endif %}
	</ul>
	<script>
		var userGroups = {{ _user.groups|json|raw }};
	</script>
</div>
