{% import 'helper.html.twig' as helper %}
{% import 'link.html.twig' as link %}
{% if isExpanded is not defined %}
	{% set isExpanded = false %}
{% endif %}
<ul class="{{ not isExpanded ? 'two-columns' : '' }}">
{% for type in types %}
	{% if type.nrOfTexts > 0 %}
	<li>
		<a href="{{ path('texts_by_type', {'type': type.code}) }}" data-edit="{{ link.admin_text_type_edit(type) }}">{{ type }}</a>
		{{ helper.printNrOfItems(type.nrOfTexts, 'tooltip.nr-of-texts-with-type'|trans({'%count%': type.nrOfTexts, '%type%': type.name})) }}
		{{ helper.printInfoTip(type.description, isExpanded) }}
	</li>
	{% endif %}
{% endfor %}
</ul>
