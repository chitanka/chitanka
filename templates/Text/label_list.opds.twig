{% for label in labels %}
	<entry>
		<title>{{ label.name }}</title>
		<id>{{ helper.urn('texts_by_label', [label.slug]) }}</id>
		{{ helper.link(helper.path('texts_by_label', {'slug': label.slug})) }}
		<content type="text">Произведения с етикет „{{ label.name }}“. Общо: {{ label.nrOfTexts }}</content>
	</entry>
{% endfor %}
