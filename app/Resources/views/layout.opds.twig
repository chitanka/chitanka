{% extends '::base.opds.twig' %}
{% import 'App::helper.opds.twig' as helper %}

{% if title is defined and pager is defined and pager.count > 1 %}
{% set suffix = 'страница ' ~ pager.page ~ ' от ' ~ pager.count %}
{% set subtitle = subtitle is defined ? subtitle ~' — '~ suffix : suffix %}
{% endif %}

{% block title %}
	{% if title is defined %}
		{{ title|doctitle }}
		{% if subtitle is defined %}
			— {{ subtitle|doctitle }}
		{% endif %}
		— {{ parent() }}
	{% else %}
		{{ parent() }}
	{% endif %}
{% endblock %}
{% block head %}
	{% if link_self is not defined %}
		{% set link_self = helper.url(current_route) %}
	{% endif %}
	{{ helper.id(link_self) }}
	{{ helper.updated(updated_at) }}
	<link rel="start" href="{{ url('catalog', {'_format': 'opds'}, true) }}" type="application/atom+xml; profile=opds-catalog; kind=navigation"/>
	<link rel="self" href="{{ link_self }}" type="application/atom+xml; profile=opds-catalog; kind=navigation"/>
	{% block link_search %}
		<link rel="search" href="{{ url('books_search', {_format: 'osd'}) }}" type="application/opensearchdescription+xml" title="Търсене на книги"/>
	{% endblock %}
	{% if link_up is defined %}
		<link rel="up" href="{{ link_up }}" type="application/atom+xml; profile=opds-catalog; kind=navigation"/>
	{% endif %}

	<author>
		<name>Моята библиотека</name>
		<uri>{{ url('homepage', [], true) }}</uri>
	</author>
{% endblock %}
