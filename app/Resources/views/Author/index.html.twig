{% extends 'App::layout.html.twig' %}

{% set title = 'authors'|trans %}
{% block head %}
	{{ parent() }}
	<link rel="search" type="application/opensearchdescription+xml" href="{{ path('authors_search', {'_format': 'osd'}) }}" title="Търсене на автори в Моята библиотека" />
	<link rel="search" type="application/opensearchdescription+xml" href="{{ path('persons_search', {'_format': 'osd'}) }}" title="Търсене на личности в Моята библиотека" />
{% endblock %}
{% block content %}
	{% include 'App:Author:navigation.html.twig' with {'by': '', 'letter': ''} %}
	<h2>Държава</h2>
	<ul>
		{% for country in countries %}
			<li>
				<a href="{{ path('authors_by_country', {'country': country.code}) }}">{{ country.name }}</a>
				<span class="badge">{{ country.nrOfAuthors }}</span>
			</li>
		{% endfor %}
	</ul>
{% endblock %}
