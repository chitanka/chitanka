{% extends 'App::layout.opds.twig' %}
{% import 'App::helper.opds.twig' as helper %}

{% set link_self = helper.path(current_route, {'page': pager.page}) %}
{% set title = 'Нови произведения' %}
{% block link_search %}
	<link rel="search" href="{{ path('texts_search', {_format: 'osd'}) }}" type="application/opensearchdescription+xml" title="Търсене на произведения"/>
{% endblock %}
{% block content %}
	{% for text_revision in text_revisions %}
		{% include 'App:Text:item.opds.twig' with {'text': text_revision.text} %}
	{% endfor %}
	{% include 'App::pager.opds.twig' %}
{% endblock %}
