{% import 'App::navi.html.twig' as navi %}
{% if by == 'first-name' or by == '' %}
	<h2>Име</h2>
	<div class="first-name text-center">
		{{ navi.person_first_letter_links('translators_by_alpha', (by == 'first-name' ? letter : '')) }}
	</div>
{% endif %}
{% if by == 'last-name' or by == '' %}
	<h2>Фамилия</h2>
	<div class="last-name text-center">
		{{ navi.person_last_letter_links('translators_by_alpha', (by == 'last-name' ? letter : '')) }}
	</div>
	<h2>Държава</h2>
	{% import 'helper.html.twig' as helper %}
	<ul>
	{% for country in countries %}
		{% if country.nrOfTranslators > 0 %}
			<li>
				<a href="{{ path('translators_by_country', {'country': country.code}) }}">{{ country.name }}</a>
				{{ helper.printNrOfItems(country.nrOfTranslators) }}
			</li>
		{% endif %}
	{% endfor %}
	</ul>
{% endif %}
