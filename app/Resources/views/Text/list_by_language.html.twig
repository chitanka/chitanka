{% extends 'layout.html.twig' %}

{% set title %}Произведения на <a class="selflink" data-edit="{{ path('admin_language_edit', {id: language.code}) }}">{{ language }}</a>{% endset %}
{% block content %}

	{% import 'helper.html.twig' as helper %}
	{% if texts is empty %}

		<p class="no-items">
			{{ helper.not_found('Няма намерени произведения.') }}
		</p>

	{% else %}

		<ul class="breadcrumb" itemprop="breadcrumb">
			<li><a href="{{ path('texts') }}">Произведения</a></li>
			<li class="active">
				език: <a href="{{ path('texts_by_language', {'language': language.code}) }}" itemprop="name" data-edit="{{ path('admin_language_edit', {id: language.code}) }}">{{ language }}</a>
			</li>
		</ul>

		{% include 'listSettings.html.twig' %}
		{% include 'Text/list.html.twig' %}
		{% include 'pager.html.twig' %}

	{% endif %}

{% endblock %}
