{% extends 'layout.html.twig' %}

{% import 'link.html.twig' as link %}

{% set title = "Читателски оценки" %}
{% set subtitle %}
	{% import 'text.html.twig' as texttools %}
	за {{ texttools.text_title_with_author(text) }}
{% endset %}

{% block content %}
	<table class="content">
		<tr>
			<th>Дата</th>
			<th>Потребител</th>
			<th>Оценка</th>
		</tr>
		{% for rating in ratings %}
			<tr>
				<td>{{ rating.date|humandate }}</td>
				<td>{{ link.user_with_email(rating.user) }}</td>
				<td>{{ rating.rating }}</td>
			</tr>
		{% endfor %}
	</table>
{% endblock %}
